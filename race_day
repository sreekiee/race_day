let raceNumber = Math.floor(Math.random()*1000);

let isRegistered = false;

let runnerAge = 2;

isRegistered ? raceNumber += 0 : raceNumber += 1000;

if (runnerAge > 18 && isRegistered){
	console.log(`Race at 9:30 - ${raceNumber}`);
} else if (runnerAge > 18 || isRegistered) {
	console.log(`Race at 11:00 - ${raceNumber}`);
} else if (runnerAge < 18 && !isRegistered) {
	console.log(`Race at 12:30 - ${raceNumber}`);
} else {
	console.log('Consult registration desk');
}
 
